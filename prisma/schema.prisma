generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  name      String
  surname   String
  email     String      @unique
  password  String
  picture   String?
  lastLogin DateTime    @default(now())
  UserRoles UserRoles[]
}

model Roles {
  id        Int         @id @default(autoincrement())
  roleName  String
  claims    String
  UserRoles UserRoles[]
}

model UserRoles {
  id Int @id @default(autoincrement())

  user    Users @relation(fields: [usersId], references: [id], onDelete: Cascade)
  usersId Int
  role    Roles @relation(fields: [rolesId], references: [id], onDelete: Cascade)
  rolesId Int

  @@unique([usersId, rolesId])
}

model Category {
  id              Int               @id @default(autoincrement())
  categoryName    String
  seoTitle        String
  seoDescription  String
  queue           Int?
  CategorySources CategorySources[]
  Newses          Newses[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
}

model CategorySources {
  id             Int      @id @default(autoincrement())
  sourceUrl      String
  sourceSiteName String
  category       Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId     Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime
}

model Newses {
  id             Int      @id @default(autoincrement())
  title          String
  subDescription String
  content        String
  imageId        String
  seoTitle       String
  seoDescription String
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  category       Category @relation(fields: [categoryId], references: [id])
  categoryId     Int
}
